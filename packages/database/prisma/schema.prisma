generator client {
  provider = "prisma-client-js"
  output   = "../../../apps/web/node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String     @id @default(dbgenerated("(gen_random_uuid())::text"))
  email       String?    @unique
  username    String?    @unique
  password    String?    // Hash password jika menggunakan local auth
  name        String
  whatsapp    String?
  address     String?
  bankName    String?
  bankAccount String?
  bankHolder  String?
  role        Role       @default(MITRA)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now()) @updatedAt
  auditLogs        AuditLog[]
  leads            Lead[]      @relation("MitraLeads")
  projects         Project[]   @relation("ProjectPIC")
  documents        Document[]  @relation("MitraDocuments")
  documentsCreated Document[]  @relation("DocumentCreator")
}

model Lead {
  id        String     @id @default(dbgenerated("(gen_random_uuid())::text"))
  name      String
  contact   String
  email     String?
  address   String?
  value     Float?
  source    String
  status    LeadStatus @default(PENDING)
  mitraId   String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now()) @updatedAt
  mitra     User?       @relation("MitraLeads", fields: [mitraId], references: [id])
  notes     LeadNote[]
  project   Project?
  documents Document[] @relation("LeadDocuments")

  @@index([createdAt])
  @@index([mitraId])
  @@index([status])
}

model LeadNote {
  id        String   @id @default(dbgenerated("(gen_random_uuid())::text"))
  leadId    String
  content   String
  createdBy String
  createdAt DateTime @default(now())
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId])
}

model Project {
  id         String        @id @default(dbgenerated("(gen_random_uuid())::text"))
  name       String
  clientName String
  status     ProjectStatus @default(TODO)
  deadline   DateTime
  startDate  DateTime      @default(now())
  value      Float?
  leadId     String        @unique
  picId      String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @default(now()) @updatedAt
  expenses   Expense[]
  incomes    Income[]
  lead       Lead          @relation(fields: [leadId], references: [id])
  pic        User?         @relation("ProjectPIC", fields: [picId], references: [id])
  notes      ProjectNote[]
  documents  Document[]    @relation("ProjectDocuments")

  @@index([deadline])
  @@index([picId])
  @@index([status])
}

model ProjectNote {
  id        String   @id @default(dbgenerated("(gen_random_uuid())::text"))
  projectId String
  content   String
  createdBy String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Income {
  id          String   @id @default(dbgenerated("(gen_random_uuid())::text"))
  date        DateTime
  paymentType String
  amount      Float
  notes       String?
  projectId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  project     Project  @relation(fields: [projectId], references: [id])

  @@index([date])
  @@index([projectId])
}

model Expense {
  id        String   @id @default(dbgenerated("(gen_random_uuid())::text"))
  date      DateTime
  category  String
  amount    Float
  notes     String?
  projectId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  project   Project? @relation(fields: [projectId], references: [id])

  @@index([category])
  @@index([date])
  @@index([projectId])
}

model AuditLog {
  id         String   @id @default(dbgenerated("(gen_random_uuid())::text"))
  action     String
  entityType String
  entityId   String
  details    String?
  userId     String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])

  @@index([createdAt])
  @@index([entityType, entityId])
  @@index([userId])
}

model Setting {
  id        String   @id @default(dbgenerated("(gen_random_uuid())::text"))
  key       String   @unique
  value     String
  updatedAt DateTime @default(now()) @updatedAt
}

model Document {
  id           String       @id @default(dbgenerated("(gen_random_uuid())::text"))
  documentNo   String       @unique
  type         DocumentType
  title        String
  recipientName String
  fileUrl      String?
  sentViaWa    Boolean      @default(false)
  sentAt       DateTime?
  leadId       String?
  projectId    String?
  mitraId      String?
  createdBy    String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @default(now()) @updatedAt

  lead         Lead?        @relation("LeadDocuments", fields: [leadId], references: [id])
  project      Project?     @relation("ProjectDocuments", fields: [projectId], references: [id])
  mitra        User?        @relation("MitraDocuments", fields: [mitraId], references: [id])
  creator      User         @relation("DocumentCreator", fields: [createdBy], references: [id])

  @@index([type])
  @@index([leadId])
  @@index([projectId])
  @@index([mitraId])
  @@index([createdAt])
}

enum Role {
  OWNER
  MITRA
}

enum LeadStatus {
  PENDING
  DEAL
  CANCEL
}

enum ProjectStatus {
  TODO
  ON_PROGRESS
  DONE
  OVERDUE
}

enum DocumentType {
  PROPOSAL_CLIENT
  INVOICE_DP
  INVOICE_PELUNASAN
  INVOICE_FULL
  SURAT_PERJANJIAN_MITRA
  PROPOSAL_MITRA
}
